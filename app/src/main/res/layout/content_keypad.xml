<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sensomate.callcard.KeypadActivity"
    tools:showIn="@layout/activity_keypad">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:layout_weight=".2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_weight="1">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <EditText
                    android:layout_width="match_parent"
                    android:hint="Number"
                    android:singleLine="true"
                    android:textSize="22dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/edittext_phonenumber"
                    android:editable="false"
                    android:layout_height="match_parent" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:layout_width="match_parent"
                            android:textSize="30dp"
                            android:id="@+id/button_one"
                            android:textColor="@color/colorTabiinticater"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_selection"
                            android:text="1"/>

                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="30dp"
                        android:id="@+id/button_two"
                        android:textColor="@color/colorTabiinticater"
                        android:background="@drawable/button_selection"
                        android:text="2"/>

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Button
                        android:layout_width="match_parent"
                        android:textSize="30dp"
                        android:id="@+id/button_three"
                        android:textColor="@color/colorTabiinticater"
                        android:background="@drawable/button_selection"
                        android:layout_height="match_parent"
                        android:text="3"/>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Button
                        android:layout_width="match_parent"
                        android:textSize="30dp"
                        android:id="@+id/button_four"
                        android:textColor="@color/colorTabiinticater"
                        android:background="@drawable/button_selection"
                        android:layout_height="match_parent"
                        android:text="4"/>

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="30dp"
                        android:id="@+id/button_five"
                        android:textColor="@color/colorTabiinticater"
                        android:background="@drawable/button_selection"
                        android:text="5"/>

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Button
                        android:layout_width="match_parent"
                        android:textSize="30dp"
                        android:id="@+id/button_six"
                        android:textColor="@color/colorTabiinticater"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_selection"
                        android:text="6"/>

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Button
                        android:layout_width="match_parent"
                        android:textSize="30dp"
                        android:textColor="@color/colorTabiinticater"
                        android:id="@+id/button_seven"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_selection"
                        android:text="7"/>

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="30dp"
                        android:id="@+id/button_eight"
                        android:textColor="@color/colorTabiinticater"
                        android:background="@drawable/button_selection"
                        android:text="8"/>

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="30dp"
                        android:id="@+id/button_nine"
                        android:textColor="@color/colorTabiinticater"
                        android:background="@drawable/button_selection"
                        android:text="9"/>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Button
                        android:layout_width="match_parent"
                        android:text="*"
                        android:id="@+id/button_star"
                        android:textSize="30dp"
                        android:textColor="@color/colorTabiinticater"
                        android:background="@drawable/button_selection"
                        android:layout_height="match_parent" />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="30dp"
                        android:id="@+id/button_zero"
                        android:textColor="@color/colorTabiinticater"
                        android:background="@drawable/button_selection"
                        android:text="0"/>

                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Button
                        android:layout_width="match_parent"
                        android:text="#"
                        android:id="@+id/button_hash"
                        android:textSize="30dp"
                        android:textColor="@color/colorTabiinticater"
                        android:background="@drawable/button_selection"
                        android:layout_height="match_parent" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <Button
                        android:layout_width="match_parent"
                        android:background="@drawable/button_selection"
                        android:id="@+id/imagebutton_resentcontact"
                        android:text="+"
                        android:textSize="30dp"
                        android:textColor="@color/colorTabiinticater"
                        android:layout_height="match_parent" />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:background="@drawable/button_selection"
                        android:src="@drawable/ic_phonecall"
                        android:id="@+id/iamagebutton_call"
                        android:layout_height="match_parent" />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:background="@drawable/button_selection"
                        android:id="@+id/iamgebutton_backspace"
                        android:src="@drawable/ic_backspace_blue_24dp"
                        android:layout_height="match_parent" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1.5">


                    <com.google.android.gms.ads.AdView
                        android:id="@+id/adView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:layout_below="@+id/textContent"
                        ads:adSize="BANNER"
                        ads:adUnitId="@string/banner_home_footer">
                    </com.google.android.gms.ads.AdView>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
